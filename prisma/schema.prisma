datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}


generator client {
  provider = "prisma-client-js"
}



model transaction {
  id String @id  @default(cuid())
  doneAt DateTime 
  addedAt DateTime @default(now())
  userId String
  amount Float
  desc String
  isCredit Boolean
  recipient String
  @@index([userId])
}